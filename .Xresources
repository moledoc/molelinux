! Background set based on gruvbox base color
XTerm*background: #282828
! Foreground color same as bspwm border color
! + it suits gruvbox as well.
XTerm*foreground: #fabd2f 

! Use esc instead of alt for meta chars.
! This allows to use alt key in eg nvim.
XTerm*metaSendsEscape: true
XTerm.VT100.eightBitOutput: false

! UTF-8
XTerm*utf8: 1

XTerm*marginBell: no
XTerm*internalBorder: 0

! Turn on color mode in xterm
XTerm.VT100*dynamicColors: On

! Mouse pointer shape
!XTerm*pointerShape: XTerm
XTerm*pointerShape: left_ptr
XTerm*pointerColor: black
XTerm*pointerColorBackground: white

! Font
XTerm*faceName: Hermit-Regular
XTerm*faceSize: 10

! Increase font size
!XTerm.vt100.translations: #override \n\
!  Ctrl <Key> minus: smaller-vt-font() \n\
!  Ctrl <Key> plus: larger-vt-font()

! Gruvbox colors
! colors in terminal also correspond to gruvbox colors scheme.
! eg 'ls' output
XTerm*color0:  #282828
XTerm*color1:  #cc241d
XTerm*color2:  #98971a
XTerm*color3:  #d79921
XTerm*color4:  #458588
XTerm*color5:  #b16286
XTerm*color6:  #689d6a
XTerm*color7:  #a89984
XTerm*color8:  #928374
XTerm*color9:  #fb4934
XTerm*color10: #b8bb26
XTerm*color11: #fabd2f
XTerm*color12: #83a598
XTerm*color13: #d3869b
XTerm*color14: #8ec07c
XTerm*color15: #ebdbb2

